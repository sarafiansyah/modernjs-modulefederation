{
    "name": "common-web",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "reset": "npx rimraf node_modules ./**/node_modules",
        "dev": "modern dev",
        "build": "modern build",
        "start": "modern start",
        "serve": "modern serve",
        "new": "modern new",
        "lint": "biome check",
        "prepare": "simple-git-hooks",
        "upgrade": "modern upgrade"
    },
    "engines": {
        "node": ">=16.18.1"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
            "biome check --files-ignore-unknown=true"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "dependencies": {
        "@ant-design/icons": "^6.0.0",
        "@modern-js/runtime": "2.68.11",
        "@module-federation/modern-js": "^0.18.4",
        "antd": "^5.27.2",
        "axios": "^1.11.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "@modern-js/plugin-bff": "2.68.11"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@modern-js/app-tools": "2.68.11",
        "@modern-js/tsconfig": "2.68.11",
        "lint-staged": "~15.4.0",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.11.1",
        "ts-node": "~10.8.1",
        "tsconfig-paths": "~3.14.1"
    }
